<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="zodata_productset.PRODUCT_TABLE" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	         <Table items="{/ProductSet}">
	          <columns>
	             <Column>
	                 <header>
	                     <Text text="Product ID"/>
	                 </header>
	             </Column>
	             <Column>
	                 <header>
	                     <Text text="Name"/>
	                 </header>
	             </Column>
	              <Column>
	                 <header>
	                     <Text text="Category"/>
	                 </header>
	             </Column>
	          </columns>
	          <items>
	             <ColumnListItem>
	                <cells>
	                   <Text text="{ProductID}"/>
	                   <Input value="{Name}"/>
	                   <Button text="{Category}"/>
	                </cells>
	             </ColumnListItem>
	             
	            
	          </items>
	        </Table>
		</content>
	</Page>
</core:View>